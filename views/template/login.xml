<odoo>
    <template id="login_template" name="Login">
        <!-- Load frontend assets -->
        <t t-call-assets="web.assets_frontend"/>

        <!-- Load your custom CSS -->
        <!-- <link rel="stylesheet" type="text/css" href="/auction_management/static/src/css/style.css"/> -->

        <script type="text/javascript" src="/auction_management/static/src/js/user.js"></script>
        <xpath expr="//main" position="replace">
            <header>
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <a class="navbar-brand" href="/">Auction System</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/auction/register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/auction/login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Auctions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/properties">Properties</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <main class="container mt-5">

                <h2 class="text-center">Login</h2>
                <form action="/auction/login/submit" method="post" class="mt-4">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" id="email" placeholder="Email"
                               required="0"/>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" name="password" id="password" placeholder="Password"
                               required="0"/>
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
                <p class="mt-3 text-center">
                    <a href="/auction/register">Don't have an account? Register here.</a>
                </p>

            </main>

            <!-- Custom Footer -->
            <footer class="text-center mt-4">
                <p>2024 Auction Management System. All rights reserved.</p>
            </footer>
        </xpath>
    </template>
</odoo>